pipeline {
    agent any // Runs on any available agent

    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from version control (e.g., Git)
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Build your project (e.g., compile code)
                sh 'mvn clean package' // Example Maven build command
            }
        }
        
        stage('Test') {
            steps {
                // Run tests
                sh 'mvn test' // Example Maven test command
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy the application (e.g., to a server)
                sh './deploy-script.sh' // Example deployment script
            }
        }
    }
}
